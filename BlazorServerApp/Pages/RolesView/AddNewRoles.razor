@page "/AddNewRoles"
@using BlazorServerApp.Data
@using BlazorServerApp.Model;
@inject RolesService Roleservice
@inject NavigationManager NavigationManager

<h3>AddNewRoles</h3>
<hr />
<form>
    <div class="row">
        <div class="col-md-8">
            <div class="for-group">
                <label for="Phone" class="control-lable">Role Name</label>
                <input form="Phone" class="form-control" @bind="@obj.RoleName" />
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-outline-primary" @onclick="@Createemployee" value=" Save Role" />
                <input type="button" class="btn btn-outline-danger" @onclick="@Cancal" value="Cancal" />
            </div>
        </div>
    </div>
</form>

@code {
    Roles obj = new Roles();

    protected async void Createemployee()
    {
        await Roleservice.AddNewRolesAsync(obj);
        NavigationManager.NavigateTo("RolesList");
    }
    protected async void Cancal()
    {
        NavigationManager.NavigateTo("RolesList");
    }
}
